{
	"name": "chrome-extension-quick-start",
	"version": "0.1.0",
	"description": "Quick start for chrome extension.",
	"manifest_version": 2,
	"icons": { "128": "icon.png" },
	"browser_action": {
		"default_icon": "icon.png" ,
		"default_title": "quick-start"
	},
	"permissions": [
		"http://*/",
		"cookies",
		"https://*/",
		"bookmarks",
		"tabs",
		"unlimitedStorage",
		"history",
		"notifications"
	],

	"browser_action": {
      "default_title": "quick-start",
      "default_icon": "icon.png",
      "default_popup": "./popup/popup.html"
  	},
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
	    {
	      "matches": ["https://*/*", "http://*/*"],
	      "css": ["./lib/toast/toast.css"],
	      "js": ["./lib/toast/toast.js", "app.js"]
	    }
	],
  "web_accessible_resources": [
    "./config/config.json"
  ]
}
